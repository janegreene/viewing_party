<section class='movie-info'>

  <section class = 'title'>
    <%= @movie.title %>
  </section>
  <section class = 'vote_average'>
    <%= @movie.vote_avg %>
  </section>
  <section class = 'runtime'>
    <%= @movie.runtime %>
  </section>
  <section class = 'genres'>
    <% @movie.genres.each do |genre| %>
      <%= genre %>
    <% end %>
  </section>
  <section class = 'overview'>
    <%= @movie.overview %>
  </section>
</section>
<section class = 'cast'>
  <% @cast.members.each do |name, character| %>
  <p class= 'member'>
      <%= name %> as <%= character %>
    </p>
    <% end %>
</section>
<section class = 'reviews'>
  <% @review.reviews.each do |author, content| %>
      <p>Author: <%= author %>
      <%= content %>
      </p>
    <% end %>
</section>
